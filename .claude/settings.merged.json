{
  "allowedTools": [
    "Bash(git worktree:*)",
    "Bash(git add:*)",
    "Bash(git commit:*)",
    "Bash(git fetch:*)",
    "Bash(git push:*)",
    "Bash(git pull:*)",
    "Bash(git log:*)",
    "Bash(git diff:*)",
    "Bash(git status:*)",
    "Bash(git branch:*)",
    "Bash(git remote:*)",
    "Bash(git stash:*)"
  ],
  "permissions": {
    "allow": [
      "Bash(gh pr view*)",
      "Bash(gh pr list*)",
      "Bash(gh pr diff*)",
      "Bash(gh pr checks*)",
      "Bash(gh pr status*)",
      "Bash(gh pr create*)",
      "Bash(gh pr comment*)",
      "Bash(gh issue view*)",
      "Bash(gh issue list*)",
      "Bash(gh issue status*)",
      "Bash(gh issue create*)",
      "Bash(gh repo view*)",
      "Bash(gh repo list*)",
      "Bash(gh api*)",
      "Bash(gh run view*)",
      "Bash(gh run list*)",
      "Bash(gh search*)",
      "WebFetch(domain:thehackernews.com)",
      "WebFetch(domain:www.thehackernews.com)",
      "WebFetch(domain:bleepingcomputer.com)",
      "WebFetch(domain:www.bleepingcomputer.com)",
      "WebFetch(domain:krebsonsecurity.com)",
      "WebFetch(domain:arstechnica.com)",
      "WebFetch(domain:www.arstechnica.com)",
      "WebFetch(domain:wired.com)",
      "WebFetch(domain:www.wired.com)",
      "WebFetch(domain:theregister.com)",
      "WebFetch(domain:www.theregister.com)",
      "WebFetch(domain:darkreading.com)",
      "WebFetch(domain:www.darkreading.com)",
      "WebFetch(domain:securityweek.com)",
      "WebFetch(domain:www.securityweek.com)",
      "WebFetch(domain:techcrunch.com)",
      "WebFetch(domain:www.techcrunch.com)",
      "WebFetch(domain:cisa.gov)",
      "WebFetch(domain:www.cisa.gov)",
      "WebFetch(domain:ncsc.gov.uk)",
      "WebFetch(domain:www.ncsc.gov.uk)",
      "WebFetch(domain:news.ycombinator.com)",
      "WebFetch(domain:theverge.com)",
      "WebFetch(domain:www.theverge.com)",
      "WebFetch(domain:cyberscoop.com)",
      "WebFetch(domain:www.cyberscoop.com)",
      "WebFetch(domain:portswigger.net)",
      "WebFetch(domain:www.portswigger.net)",
      "WebFetch(domain:threatpost.com)",
      "WebFetch(domain:www.threatpost.com)",
      "WebFetch(domain:csoonline.com)",
      "WebFetch(domain:www.csoonline.com)",
      "WebFetch(domain:medium.com)",
      "WebFetch(domain:github.com)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/scripts/statusline-command.sh"
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/session_start.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/user_prompt_submit.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/pre_tool_use.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/post_tool_use.sh"
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/permission_request.sh"
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/notification.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/stop.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/subagent_stop.sh"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/pre_compact.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/wrappers/session_end.sh"
          }
        ]
      }
    ]
  }
}
